{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000, // Use a different port for Xdebug
            "pathMappings": {
                "/var/www/html/api": "${workspaceFolder}/api"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000 // Use the same port for Xdebug as above
        }
    ]
}